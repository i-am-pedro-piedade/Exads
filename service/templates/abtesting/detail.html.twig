{% extends 'base.html.twig' %}
{% block title %}
    A/B Testing
{% endblock %}
{% block header %}
    A/B Testing
{% endblock %}
{% block body %}
    {% if(design is null) %}
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">404</h3>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <p>We're really sorry but we couldn't find the requested design</p>
                </div>
            </div>
            <div class="card-footer text-muted">
                <a href="{{ path('a_b_testing_index') }}" class="w-100 btn btn-secondary">Back to AB Testing index</a>
            </div>
        </div>

    {% else %}
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">{{ design.designName }}</h3>
            </div>
            <div class="card-body">
                <div class="card-text mb-3">
                    <p>On this page load, the user will be redirected to <strong>{{ design.designName }}.</strong></p>
                    <p>This redirection is random and occurs on average <span class="badge bg-primary">{{ design.splitPercent }}%</span> of all page loads.</p>
                </div>
            </div>
            <div class="card-footer text-muted">
                <div class="row g-4">
                    <div class="col-4">
                        <a href="{{ path('a_b_testing_index') }}" class="w-100 btn btn-secondary">Back to AB Testing index</a>
                    </div>
                    <div class="col-4">
                        <a href="{{ path('a_b_testing_detail_test', {'id': id}) }}" class="w-100 btn btn-secondary">Test frequencies</a>
                    </div>
                    <div class="col-4">
                        <a href="" class="w-100 btn btn-primary">Reload this page</a>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}

{% endblock %}