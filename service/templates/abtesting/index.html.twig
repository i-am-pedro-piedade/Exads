{% extends 'base.html.twig' %}
{% block title %}
    A/B Testing
{% endblock %}
{% block header %}
    A/B Testing
{% endblock %}
{% block body %}

    <div class="row g-4 py-4 row-cols-1">
        {% for id,item in list %}
            <div class="col-4 d-flex align-items-stretch">
                <div class="card w-100">
                    <div class="card-header">
                        <h3 class="card-title">{{ item.promotionName|capitalize }}</h3>
                    </div>
                    <div class="card-body">
                        <table class="table table-striped table-hover">
                            <thead>
                            <tr>
                                <th scope="col">Name</th>
                                <th scope="col" class="text-end">Split %</th>
                            </tr>
                            </thead>
                            <tbody>
                                {% for design in item.allDesigns %}
                                    <tr>
                                        <th scope="row">{{ design.designName }}</th>
                                        <td class="text-end">{{ design.splitPercent }}</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <div class="card-footer text-muted">
                        <a href="{{ path('a_b_testing_detail', {'id': id }) }}" class="w-100 btn btn-primary">View {{ item.promotionName|capitalize }}</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}